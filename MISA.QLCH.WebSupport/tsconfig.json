{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    // test
    "baseUrl": ".",
    "paths": {
      "@src": [
        "src"
      ],
      "@src/*": [
        "src/*"
      ],
      "@library-src": [
        "../common/MISA.QLCH.Library/src"
      ],
      "@library-src/*": [
        "../common/MISA.QLCH.Library/src/*"
      ],
      "@store-src": [
        "../common/MISA.QLCH.CommonStores/src"
      ],
      "@store-src/*": [
        "../common/MISA.QLCH.CommonStores/src/*"
      ],
      
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "../common/MISA.QLCH.Library/src/**/*.ts",
    "../common/MISA.QLCH.Library/src/**/*.d.ts",
    "../common/MISA.QLCH.Library/src/**/*.tsx",
    "../common/MISA.QLCH.Library/src/**/*.vue",
    "../common/MISA.QLCH.CommonStores/src/**/*.ts",
    "../common/MISA.QLCH.CommonStores/src/**/*.d.ts",
    "../common/MISA.QLCH.CommonStores/src/**/*.tsx",
    "../common/MISA.QLCH.CommonStores/src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "ignoreRules": {
    "TS2307": true
  }
}